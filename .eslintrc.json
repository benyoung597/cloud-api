{
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "project": [
            "./tsconfig.json",
            "./packages/*/tsconfig.json"
        ]
    },
    "extends": [
        "eslint:recommended",
        "plugin:@typescript-eslint/recommended",
        "prettier"
    ],
    "env": {
        "es6": true,
        "node": true
    },
    "ignorePatterns": [
        "**/*.d.ts",
        "build",
        "packages/*/build",
        "packages/*/node_modules"
    ],
    "rules": {
        "no-undef": 0,
        "no-nested-ternary": 2
    },
    "plugins": [
        "prettier"
    ]
}
